@model  Cosmopolitan.Models.Quotation
@{

    ViewData["Title"] = "Cotizador";

}

<div class="panel panel-primary">
    <div class="panel-heading text-center">Cotización de Préstamo Hipotecario</div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Fecha, new { @class = "col-sm-3 control-label" })
