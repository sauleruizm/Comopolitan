                @Html.LabelFor(m => m.Programa, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.Programa.Name,
                        Model.Programa != null ? Model.Programa.Collection ?? new List<SelectListItem>() :
                            new List<SelectListItem>(), new { @class = "form-control" })
                </div>
            </div>
            <p class="bg-primary text-center">Datos de la Propiedad</p>
            <div class="form-group">
